// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider =  "mysql"
  url      = env("DATABASE_URL") 
}





model users {
  id         Int      @id @default(autoincrement())
  username   String   @db.VarChar(255) @unique
  password   String   @db.VarChar(255)
  refreshToken   String?   @db.VarChar(255)
  registrationTokens Int     @default(10) // Set a default value (0 in this case, change it if needed)
  emailVerificationToken String?     // Set a default value (0 in this case, change it if needed)
  verified     Boolean  @default(false)
  email      String   @db.VarChar(255) @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())

}


model User {
  id               Int          @id @default(autoincrement())
  username         String       
  password         String
  refreshToken     String?
  registrationTokens Int        @default(10)
  email            String       
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  loginAttempts    LoginAttempt[]
}

model LoginAttempt {
  id         Int       @id @default(autoincrement())
  user       User      @relation(fields: [userId], references: [id])
  userId     Int
  username   String    @default("unknown")
  ipAddress  String
  createdAt  DateTime  @default(now())
}
